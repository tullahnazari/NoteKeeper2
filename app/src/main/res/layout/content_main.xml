<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/editText2"
            app:layout_constraintStart_toStartOf="@+id/spinnerCourses"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textNoteTitle"
            app:layout_constraintEnd_toEndOf="@+id/spinnerCourses" android:hint="Note text"/>
    <Spinner
            android:layout_width="318dp"
            android:layout_height="29dp"
            android:id="@+id/spinnerCourses" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textNoteTitle" android:layout_marginBottom="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/textNoteTitle" app:layout_constraintTop_toBottomOf="@+id/spinnerCourses"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/spinnerCourses"
            app:layout_constraintEnd_toEndOf="@+id/spinnerCourses" android:hint="Note title"/>
</androidx.constraintlayout.widget.ConstraintLayout>